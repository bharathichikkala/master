<h1 align="center">list of users</h1>

<div align="center">


<%= will_paginate %>

</div>
<div>
<p>

<%= link_to "Create new user", signup_path %>

</p>

<table>

<tr>
<th>profile</th>

<th>username</th>

<th>email</th>

<th>phonenumber</th>

<th>articles</th>

</tr>

<% @users.each do |user| %>

<tr>
<td><%= link_to gravatar_for(user), user_path(user) %></td>
<td><%= user.name %></td>

<td><%= user.email %></td>

<td><%= user.phone_number %></td>

<td><%= pluralize(user.articles.count, "article") if user.articles %></td>

<td><%= link_to 'Edit', edit_user_path(user) %></td>

<td><%= link_to 'Show', user_path(user) %></td>

<% if logged_in? and current_user.admin? %>
<td><%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></td>
<% end %>
</tr>

<% end %>

</table>

</div>
<div align="center">
<%= link_to 'Back to home',root_path %>
<%= will_paginate %>
</div>
